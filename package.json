{
  "name": "hoyo_gacha",
  "displayName": "HoYo.Gacha",
  "version": "1.0.0",
  "description": "An unofficial tool for managing and analyzing your miHoYo gacha records",
  "author": "lgou2w <lgou2w@hotmail.com>",
  "homepage": "https://github.com/lgou2w/HoYo.Gacha#readme",
  "repository": "https://github.com/lgou2w/HoYo.Gacha.git",
  "license": "MIT OR Apache-2.0",
  "private": "true",
  "type": "module",
  "engines": {
    "node": "^20.9.0 || >= 22",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "pnpm tauri:dev",
    "build": "pnpm tauri:build",
    "test": "pnpm web:test && pnpm tauri:test",
    "lint": "pnpm web:lint && pnpm tauri:lint",
    "web:clean": "rimraf dist",
    "web:dev": "cross-env NODE_ENV=development vite",
    "web:build": "cross-env NODE_ENV=production tsc && vite build",
    "web:test": "jest --verbose --passWithNoTests --config jest.config.cjs",
    "web:lint": "eslint --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0 --ignore-path .gitignore .",
    "web:lint:fix": "eslint --fix --ext .ts,.tsx --ignore-path .gitignore .",
    "tauri": "tauri",
    "tauri:clean": "cargo clean",
    "tauri:dev": "cross-env RUST_LOG=trace RUST_BACKTRACE=full tauri dev",
    "tauri:dev:tools": "cross-env REACT_DEVTOOLS=1 pnpm tauri:dev",
    "tauri:build": "tauri build",
    "tauri:test": "cargo test",
    "tauri:lint": "cargo check"
  },
  "dependencies": {
    "@fluentui/react-components": "^9.54.6",
    "@fluentui/react-icons": "^2.0.250",
    "@tanstack/react-query": "^5.51.15",
    "@tanstack/react-query-devtools": "^5.51.15",
    "@tanstack/react-router": "^1.45.11",
    "@tauri-apps/api": "2.0.0-beta.15",
    "@tauri-apps/plugin-os": "2.0.0-beta.7",
    "@tauri-apps/plugin-shell": "2.0.0-beta.8",
    "debounce": "^2.1.0",
    "i18next": "^23.12.2",
    "immer": "^10.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.1",
    "react-i18next": "^15.0.0",
    "use-immer": "^0.10.0"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.24.7",
    "@griffel/tag-processor": "^1.0.7",
    "@griffel/vite-plugin": "^0.1.7",
    "@tanstack/eslint-plugin-query": "^5.51.15",
    "@tauri-apps/cli": "2.0.0-beta.22",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.13",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-jest-dom": "^5.4.0",
    "eslint-plugin-n": "^17.10.1",
    "eslint-plugin-promise": "^7.0.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.9",
    "eslint-plugin-testing-library": "^6.2.2",
    "husky": "^9.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.3",
    "typescript": "^5.5.4",
    "vite": "^5.3.5"
  }
}
